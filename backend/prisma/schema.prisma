generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UsersClient {
  id         String      @id @default(uuid()) 
  name       String
  email      String
  cpf        String      @unique
  dataNascimento  DateTime @db.Date
  password   String
  created_at DateTime?   @default(now())
  update_at  DateTime?   @default(now())
  favorites  Favorites[]
  Orders Order[]


  @@map("usersClient")
}

model UsersEmployee {
  id         String      @id @default(uuid()) 
  name       String
  email      String
  cpf        String      @unique
  dataNascimento  DateTime @db.Date
  password   String
  created_at DateTime?   @default(now())
  update_at  DateTime?   @default(now())
  table      Table[]
  jobRoleId      String
  
  jobRole      JobRole   @relation(fields: [jobRoleId], references: [id])

  @@map("usersEmployee")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  products   Product[]
  extra      Extras[]

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       String
  description String
  banner      String
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())
  category    Category            @relation(fields: [category_id], references: [id])
  category_id String
  items       Item[]
  favorites   Favorites[]
  ingredients ProductIngredient[]
  productIngredientRemoved ProductIngredientRemoved[]

  @@map("products")
}

model Order {
  id          String    @id @default(uuid())
  status      Boolean   @default(false)
  draft       Boolean   @default(true)
  name        String?
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  observation String    @default("")
  usersClient_id String?
  table    Table  @relation(fields: [table_id], references: [id])
  table_id String
  
  UsersClient   UsersClient? @relation(fields: [usersClient_id], references: [id])
  
  items    Item[]

  payments Payment[]

  @@map("orders")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  status     Boolean   @default(false)
  order      Order   @relation(fields: [order_id], references: [id])
  product    Product @relation(fields: [product_id], references: [id])
  order_id   String
  product_id String
  itemIngredient ItemIngredient[]
  itemExtra itemExtra[]
  productIngredientRemoved ProductIngredientRemoved[]

  @@map("items")
}

model Favorites {
  id         String    @id @default(uuid())
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  users      UsersClient    @relation(fields: [users_id], references: [id])
  product_id String
  users_id   String

  @@map("favorites")
}

model Ingredients {
  id         String    @id @default(uuid())
  name       String
  banner     String?
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  products ProductIngredient[]
  itemIngredient ItemIngredient []

  @@map("ingredients")
}

model ProductIngredientRemoved {

  id                        String @id @default(uuid())
  product_id                String
  productIngredient_id      String
  items_id                  String
  update_at                 DateTime? @default(now())
  created_at                DateTime? @default(now())

  @@map("productIngredientRemoved")

  product              Product            @relation(fields: [product_id], references: [id])
  productIngredient    ProductIngredient  @relation(fields: [productIngredient_id], references: [id])
  items                Item               @relation(fields: [items_id], references: [id])

}

model ProductIngredient {
  id           String      @id @default(uuid())
  amount       Int
  created_at   DateTime?   @default(now())
  update_at    DateTime?   @default(now())

  product      Product     @relation(fields: [product_id], references: [id])
  ingredient   Ingredients @relation(fields: [ingredient_id], references: [id])
  product_id    String
  ingredient_id String

  productIngredientRemoved ProductIngredientRemoved[]

  @@map("ProductIngredient")
}

model ItemIngredient {
  id            String      @id @default(uuid())
  item_id       String
  ingredient_id String
  amount        Int
  created_at    DateTime?   @default(now())
  update_at     DateTime?   @default(now())

  item         Item     @relation(fields: [item_id], references: [id])
  ingredient   Ingredients @relation(fields: [ingredient_id], references: [id])

  @@map("itemIngredient")
}

model itemExtra{

  id            String      @id @default(uuid())
  item_id       String
  extra_id      String
  update_at     DateTime?   @default(now())
  created_at    DateTime?   @default(now())
  
  item          Item          @relation(fields: [item_id], references: [id])
  extra         Extras        @relation(fields: [extra_id], references: [id])

  @@map("itemExtra")

}

model Extras{

  id            String     @id @default(uuid())
  name          String    
  price         String
  category_id   String
  update_at     DateTime?   @default(now())
  created_at    DateTime?   @default(now())

  category      Category    @relation(fields: [category_id], references: [id])

  @@map("extras")

  
  itemExtra itemExtra[]

}

model Table {
  id         String    @id @default(uuid())
  number     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  users    UsersEmployee?   @relation(fields: [users_id], references: [id])
  users_id String?
  order    Order[]

  @@map("table")
}

model Payment {
  id            String    @id @default(uuid())
  orderId       String
  paymentType   Int
  amount        Decimal
  transactionId String? @unique
  pixCode       String?
  status        Boolean  @default(false)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @default(now())

  order Order @relation(fields: [orderId], references: [id])

  @@map("payments")
}

model JobRole {
  id            String   @id @default(uuid())
  role_name     String   @db.Text
  access_level  Int
  created_at    DateTime @default(now())
  update_at     DateTime @default(now()) @updatedAt
  employees     UsersEmployee[] 

  @@map("jobRole")
}
