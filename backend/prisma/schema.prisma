generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(uuid()) 
  name       String
  email      String
  password   String
  created_at DateTime?   @default(now())
  update_at  DateTime?   @default(now())
  favorites  Favorites[]
  table      Table[]

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  products   Product[]

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       String
  description String
  banner      String
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())

  category    Category            @relation(fields: [category_id], references: [id])
  category_id String
  items       Item[]
  favorites   Favorites[]
  ingredients ProductIngredient[]
  productIngredientLiable ProductIngredientLiable[]

  @@map("products")
}

model Order {
  id          String    @id @default(uuid())
  status      Boolean   @default(false)
  draft       Boolean   @default(true)
  name        String?
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())
  observation String    @default("")

  table    Table  @relation(fields: [table_id], references: [id])
  table_id String
  items    Item[]

  payments Payment[]

  @@map("orders")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  order      Order   @relation(fields: [order_id], references: [id])
  product    Product @relation(fields: [product_id], references: [id])
  order_id   String
  product_id String

  itemIngredient ItemIngredient []
  itemExtra itemExtra[]
  productIngredientLiable ProductIngredientLiable[]

  @@map("items")
}

model Favorites {
  id         String    @id @default(uuid())
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  users      User    @relation(fields: [users_id], references: [id])
  product_id String
  users_id   String

  @@map("favorites")
}

model ExtraType{
  id               String    @id @default(uuid())
  name             String
  extra_id         String
  created_at       DateTime? @default(now())
  update_at        DateTime? @default(now())

  extras Extras[]

  @@map("ingredientsType")
  
}

model Ingredients {
  id         String    @id @default(uuid())
  name       String
  banner     String?
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  products ProductIngredient[]
  itemIngredient ItemIngredient []

  @@map("ingredients")
}

model ProductIngredientLiable {

  id                        String @id @default(uuid())
  product_id                String
  productIngredient_id      String
  items_id                  String
  tem                       Boolean
  update_at                 DateTime? @default(now())
  created_at                DateTime? @default(now())

  @@map("productIngredientLiable")

  product              Product            @relation(fields: [product_id], references: [id])
  productIngredient    ProductIngredient  @relation(fields: [productIngredient_id], references: [id])
  items                Item               @relation(fields: [items_id], references: [id])

}

model ProductIngredient {
  id           String      @id @default(uuid())
  amount       Int
  created_at   DateTime?   @default(now())
  update_at    DateTime?   @default(now())

  product      Product     @relation(fields: [product_id], references: [id])
  ingredient   Ingredients @relation(fields: [ingredient_id], references: [id])
  product_id    String
  ingredient_id String

  productIngredientLiable ProductIngredientLiable[]

  @@map("ProductIngredient")
}

model ItemIngredient {
  id            String      @id @default(uuid())
  item_id       String
  ingredient_id String
  amount        Int
  created_at    DateTime?   @default(now())
  update_at     DateTime?   @default(now())

  item         Item     @relation(fields: [item_id], references: [id])
  ingredient   Ingredients @relation(fields: [ingredient_id], references: [id])

  @@map("itemIngredient")
}

model itemExtra{

  id            String      @id @default(uuid())
  item_id       String
  extra_id      String
  update_at     DateTime?   @default(now())
  created_at    DateTime?   @default(now())
  
  item          Item          @relation(fields: [item_id], references: [id])
  extra         Extras        @relation(fields: [extra_id], references: [id])

  @@map("itemExtra")

}

model Extras{

  id            String    @id @default(uuid())
  name          String    
  price         String
  type_id       String
  update_at     DateTime?   @default(now())
  created_at    DateTime?   @default(now())

  @@map("extras")

  extraType    ExtraType   @relation(fields: [type_id], references: [id])
  itemExtra itemExtra[]

}

model Table {
  id         String    @id @default(uuid())
  number     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  users    User?   @relation(fields: [users_id], references: [id])
  users_id String?
  order    Order[]

  @@map("table")
}

model Payment {
  id            String    @id @default(uuid())
  orderId       String
  paymentType   Int
  amount        Decimal
  transactionId String? @unique
  pixCode       String?
  status        Boolean  @default(false)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @default(now())

  order Order @relation(fields: [orderId], references: [id])

  @@map("payments")
}
